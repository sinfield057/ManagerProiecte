<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>testDB</servlet-name>
        <servlet-class>test.testDB</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>admin.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminProjects</servlet-name>
        <servlet-class>admin.adminProjects</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addStudent</servlet-name>
        <servlet-class>admin.addStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addProject</servlet-name>
        <servlet-class>admin.addProject</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>studentProjects</servlet-name>
        <servlet-class>student.studentProjects</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>projectInfo</servlet-name>
        <servlet-class>admin.projectInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addTeam</servlet-name>
        <servlet-class>student.addTeam</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>testDB</servlet-name>
        <url-pattern>/testDB</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminProjects</servlet-name>
        <url-pattern>/adminProjects</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addStudent</servlet-name>
        <url-pattern>/addStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addProject</servlet-name>
        <url-pattern>/addProject</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>studentProjects</servlet-name>
        <url-pattern>/studentProjects</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>projectInfo</servlet-name>
        <url-pattern>/projectInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addTeam</servlet-name>
        <url-pattern>/addTeam</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/ManagerProiecte</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
